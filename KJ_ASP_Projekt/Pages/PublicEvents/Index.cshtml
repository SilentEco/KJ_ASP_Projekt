@page
@model KJ_ASP_Projekt.Pages.PublicEvents.IndexModel

@{
    ViewData["Title"] = "All Events";
}

<h1>All Events</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Title)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Place)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].SpotsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Organizer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Event) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>

            <td>
                @item.Date.ToString("dddd, dd MMMM yyyy")
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpotsAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organizer.OrganizerTitle)
            </td>
            <td>
                <a asp-page="./Details" class="btn btn-primary" asp-route-id="@item.Id">Join</a> 

            </td>
        </tr>
}
    </tbody>
</table>
